<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Home</title>
</head>

<body>
    <%- include('./partials/scripts.ejs') %>
        <%- include('./partials/nav.ejs') %>

            <div class="container mt-3">
                <form action="/blog" method="post" enctype="multipart/form-data">
                    <div class="mt-3">
                        <label for="title">Choose Cover-Image</label>
                        <input type="file" class="form-control" id="coverImage" aria-describedby="coverImage" name="coverImage">
                    </div>
                    <div class="mt-3">

                        <label for="title">Enter Title</label>
                        <input type="text" class="form-control" id="title" aria-describedby="title" name="title">
                    </div>

                    <div class="mt-3">
                        <label for="floatingTextarea2">Enter Body</label>

                        <textarea class="form-control" id="body" name="body" style="height: 100px"></textarea>
                    </div>
                    <div class="mt-3">
                        <input type="submit" class="btn btn-primary">
                    </div>
                </form>
            </div>

</body>